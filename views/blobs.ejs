<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Azure Storage Details</title>
  <meta name="description" content="Azure Storage Details">
  <meta name="author" content="Praneeth Putha">
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />


</head>

<body>
<h1>List of Contents in <%= container %> </h1>

<% if (blobs.length) { %>
<table class="table table-inverse">

<thead>
    <tr>
      <th colspan="3"><%= container %></th>
    </tr>
  </thead>
   <tbody>
       <% blobs.forEach(function(blob){ %>
     <tr>
     <td>      <%- link_to(blob.name, 'downblob?blobname='+blob.name) %>
	  </td>
     <td>

<div class="btn-group" role="button" aria-label="...">
     <%- link_to('delete', 'delblob?blobname='+blob.name) %>
</div> 
	   </td>
   </tr>
	<% }) %>
   <tbody>
</table>
<% } %>
<i class="fa fa-camera-retro fa-2x"></i>
